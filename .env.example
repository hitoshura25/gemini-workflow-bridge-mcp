# ============================================
# Gemini Workflow Bridge MCP Configuration
# ============================================

# ============================================
# Gemini CLI Configuration
# ============================================

# Model Selection
# Options: "auto", "gemini-2.0-flash", "gemini-1.5-pro"
GEMINI_MODEL=auto

# Retry Mechanism with Exponential Backoff
# Automatically retry transient Gemini CLI failures
GEMINI_RETRY_MAX_ATTEMPTS=3        # Total attempts (1 initial + 2 retries)
GEMINI_RETRY_INITIAL_DELAY=1.0     # Starting delay in seconds
GEMINI_RETRY_MAX_DELAY=60.0        # Maximum delay in seconds
GEMINI_RETRY_BASE=2.0              # Exponential backoff multiplier (delay = initial * base^attempt)
GEMINI_RETRY_ENABLED=true          # Enable/disable retry mechanism

# ============================================
# Context Cache Configuration
# ============================================

# How long to cache codebase context (in minutes)
CONTEXT_CACHE_TTL_MINUTES=30

# Maximum cache size (in MB)
MAX_CACHE_SIZE_MB=500

# ============================================
# Token Budget Configuration
# ============================================

# Target tokens per answer from query_codebase
MAX_TOKENS_PER_ANSWER=300

# Token compression target ratio
TARGET_COMPRESSION_RATIO=100

# ============================================
# Performance Configuration
# ============================================

# Enable parallel processing for multi-question queries
ENABLE_PARALLEL_PROCESSING=true

# Timeout for Gemini CLI calls (seconds)
GEMINI_CLI_TIMEOUT_SECONDS=30

# ============================================
# Output Directories
# ============================================

DEFAULT_SPEC_DIR=./specs
DEFAULT_REVIEW_DIR=./reviews
DEFAULT_WORKFLOW_DIR=./.claude/workflows
DEFAULT_COMMAND_DIR=./.claude/commands
DEFAULT_CONTEXT_DIR=./.workflow-context

# ============================================
# Command/Workflow Prefixes (Namespace Management)
# ============================================

# Prefix for generated slash commands
# Prevents namespace collisions with existing commands
# Set to empty string ("") to disable prefixing
GEMINI_COMMAND_PREFIX=gemini-

# Prefix for generated workflow files
# Helps identify Gemini-generated workflows
# Set to empty string ("") to disable prefixing
GEMINI_WORKFLOW_PREFIX=gemini-

# ============================================
# Debug & Logging
# ============================================

# Enable detailed logging
DEBUG_MODE=false

# Log token usage statistics
LOG_TOKEN_STATS=true

# Save Gemini CLI responses to file for debugging
SAVE_RAW_RESPONSES=false
